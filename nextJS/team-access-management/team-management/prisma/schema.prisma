datasource db {
    provider = "postgresql"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    password String
    name     String
    role     Role    @default(USER)
    teamId   String?
    Team     Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // Indexs
    @@index([email])
    @@index([role])
    @@index([teamId])

    // map
    @@map("users")
}

model Team {
    id          String  @id @default(cuid())
    name        String  @unique
    description String?
    code        String  @unique
    members     User[]

    // Timestamps
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    // map
    @@map("teams")
}

enum Role {
    ADMIN
    MANAGER
    USER
    GUEST
}
